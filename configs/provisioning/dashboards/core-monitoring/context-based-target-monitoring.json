{
  "uid": "context-monitoring",
  "title": "Context-Based Target Monitoring",
  "tags": [
    "monitoring",
    "context",
    "targets"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "üìä Overall Target Health",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "count(up)",
          "legendFormat": "Total Targets",
          "refId": "A"
        },
        {
          "expr": "count(up == 1)",
          "legendFormat": "UP",
          "refId": "B"
        },
        {
          "expr": "count(up == 0)",
          "legendFormat": "DOWN",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "id": 2,
      "title": "üè¢ Monitoring Stack (Self-Monitoring)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "up{context=\"monitoring-stack\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "mappings": [
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            },
            {
              "type": "value",
              "value": "1",
              "text": "UP"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 3,
      "title": "üñ•Ô∏è Production Infrastructure",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "up{context=\"infrastructure\"}",
          "legendFormat": "{{job}} ({{host}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "mappings": [
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            },
            {
              "type": "value",
              "value": "1",
              "text": "UP"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 4,
      "title": "üì± Production Applications",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "up{context=\"application\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "mappings": [
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            },
            {
              "type": "value",
              "value": "1",
              "text": "UP"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 5,
      "title": "üíª Development Environment",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "up{context=~\"dev-.*\"}",
          "legendFormat": "{{job}} ({{host}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "mappings": [
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            },
            {
              "type": "value",
              "value": "1",
              "text": "UP"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 6,
      "title": "üìà Target Availability by Context (Last 24h)",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "avg_over_time(up[24h]) * 100",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          },
          "unit": "percent"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Availability (24h)"
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              }
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "context": 0,
              "job": 1,
              "instance": 2,
              "host": 3,
              "environment": 4,
              "Value": 5
            },
            "renameByName": {
              "context": "Context",
              "job": "Job",
              "instance": "Instance",
              "host": "Host",
              "environment": "Environment"
            }
          }
        }
      ]
    }
  ]
}
